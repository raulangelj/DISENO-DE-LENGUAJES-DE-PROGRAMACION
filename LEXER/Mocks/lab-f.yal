(* import os *)

let delim = [' ''\t''\n']
let ws = delim+
let letter = ['A'-'Z''a'-'z']
let digit = ['0'-'9']
let id = letter(letter|digit)*
let equals = '='
let times = '*'

rule tokens = 
    ws        { print('WHITESPACE') }
  | id        { print('ID') }
  | equals       { print('EQUALS') }
  | times     { print('TIMES') }


